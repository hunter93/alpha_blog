<h1 class="text-center mt-4">Create Category</h1>
  <div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>

      <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
        <div class="input-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %><br>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %><br>
          </div>
        </div>

        <div class="input-group justify-content-center mb-3">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>

      <% end %>
      <div class="input-group justify-content-center mb-3">
        <%= link_to '[ Cancel and Return to Articles Listing ]', articles_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>